---
const { class: className = "" } = Astro.props;
---

<div class={`logo-container relative ${className}`}>
  <!-- Logo para modo oscuro -->
  <img 
    src="/logo-cropped.jpeg" 
    alt="Kennykrass Logo" 
    class="logo-dark absolute inset-0 w-full h-full object-contain opacity-0 dark:opacity-100 transition-opacity duration-300"
    loading="eager"
  />
  <!-- Logo para modo claro -->
  <img 
    src="/logo-light-cropped.png" 
    alt="Kennykrass Logo" 
    class="logo-light absolute inset-0 w-full h-full object-contain opacity-100 dark:opacity-0 transition-opacity duration-300"
    loading="eager"
  />
</div>

<style>
  .logo-container {
    position: relative;
    display: inline-block;
  }
</style>

<script>
  // Precargar ambos logos al inicio
  if (typeof window !== 'undefined') {
    const logoDark = new Image();
    logoDark.src = '/logo-cropped.jpeg';
    
    const logoLight = new Image();
    logoLight.src = '/logo-light-cropped.png';
  }
</script>