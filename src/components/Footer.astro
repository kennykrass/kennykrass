---
import Logo from './Logo.astro';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/kennykrass', icon: 'github' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/kennykrass', icon: 'linkedin' },
  { name: 'Facebook', url: 'https://facebook.com/kennykrass', icon: 'facebook' },
  { name: 'Instagram', url: 'https://instagram.com/kennykrass', icon: 'instagram' },
  { name: 'X', url: 'https://x.com/kennykrass', icon: 'x' },
  { name: 'Email', url: 'mailto:contacto@kennykrass.com', icon: 'email' }
];
---

<footer class="bg-gray-50 dark:bg-primary border-t border-gray-200 dark:border-gray-800 mt-20">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-4 md:mb-0">
        <div class="flex items-center gap-3 mb-2">
          <Logo class="h-8 w-8" />
          <h3 class="text-xl font-bold text-blue-600 dark:text-accent">Kennykrass</h3>
        </div>
        <p class="text-gray-600 dark:text-text-secondary text-sm mt-2">Desarrollo de Software y Soluciones Digitales</p>
      </div>

      <div class="flex space-x-6">
        {socialLinks.map((link) => (
          <a 
            href={link.url} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-gray-600 dark:text-text-secondary hover:text-teal-700 dark:hover:text-accent transition-colors"
            aria-label={link.name}
          >
            {link.icon === 'github' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
